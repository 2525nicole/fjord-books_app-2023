<h1><%= t('title.index', model: Book.model_name.human) %></h1>
<div id="books" class="index-items">
  <% @books.each do |book| %>

    <%= render book %>
    <p>
      <%= link_to t('views.show'), book %>
    </p>
  <% end %>
</div>

<%= paginate @books %>

<%= link_to t('views.new'), new_book_path %>
